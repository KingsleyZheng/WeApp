/* miniprogram/pages/index/index.wxss */

.swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 90rpx;
}
.swiper-item image {
  height: 100%;
}

.index-tab {
  display: flex;
}

.tab-item {
  flex: 1;
  width: 0;
  text-align: center;
  padding: 10rpx;
}

.tab-item.active {
  border-bottom: 1px #409bff solid;
  color: #409bff;
}

.index-list {
  display: flex;
  flex-wrap: wrap;
  color: #409bff;
}

.index-list-item {
  width: 50%;
  margin: 10rpx 0;
}

.index-list-item image {
  width: 90%;
  height: 350rpx;
  margin: 0 auto;
  display: block;
}

.index-list-text {
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin: 0 auto;
}
